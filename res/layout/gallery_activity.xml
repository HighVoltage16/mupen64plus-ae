<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/drawerLayout"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <!-- activity view -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <include layout="@layout/toolbar" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/galleryHalfSpacing"
                    android:paddingRight="@dimen/galleryHalfSpacing"
                    android:paddingTop="@dimen/galleryHalfSpacing"
                    android:paddingBottom="40dip"
                    android:clipToPadding="false"
                    android:gravity="center" />
            </LinearLayout>
            
            <ImageButton
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:text="Add to library"
                android:id="@+id/add"
                android:src="@drawable/ic_plus"
                android:background="@drawable/fab"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dip" />

        </RelativeLayout>

        <!-- navigation drawer -->
        <RelativeLayout
            android:layout_gravity="left|start"
            android:layout_width="260dip"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true" >

            <!-- navigation list -->
            <paulscode.android.mupen64plusae.MenuListView
                android:id="@+id/drawerNavigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:clipToPadding="false"
                android:paddingTop="20dip" />

            <!-- game information -->
            <ScrollView
                android:id="@+id/drawerInfoScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/imageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="180dip" >
                        <ImageView
                            android:id="@+id/imageArt"
                            android:layout_width="match_parent"
                            android:layout_height="180dip"
                            android:src="@drawable/default_coverart" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/gameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/galleryItemAdapter_dummyText"
                        android:textColor="#AAA"
                        android:padding="5dip"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:id="@+id/drawerOptionsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <!-- the game options will be added here programmatically -->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/drawerInfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/categoryGameInfo_title"
                        android:textColor="#AAA"
                        android:padding="5dip"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <LinearLayout
                        android:id="@+id/drawerInfoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <!-- the game information will be added here programmatically -->

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>